{
  "env": {
    "es6": true,
    "amd": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "no-debugger": 1,
    // advarsel ved bruk av debugger
    "no-console": 1,
    // advarsel ved logging til konsollet
    "react/prop-types": 0,
    // proptype-validation er av, for å unngå mer kode enn nødvendig i undervisningseksemplene
    "prettier/prettier": "error"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "16.5.0"
    }
  }
}
